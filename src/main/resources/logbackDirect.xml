<configuration>
	<!--     Enable JMX control -->
	<jmxConfigurator />
    
	<!-- Stop output INFO at start -->
	<statusListener class="ch.qos.logback.core.status.NopStatusListener" />
	
	<conversionRule conversionWord="pid" converterClass="com.ericsson.utilities.logger.ProcessIdConverter" />
	<conversionRule conversionWord="toSeverity" converterClass="com.ericsson.utilities.logger.ToSeverityConverter" />
	<conversionRule conversionWord="toJson" converterClass="com.ericsson.utilities.logger.ToJsonConverter" />

	<appender name="LOG_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">    
		<file>${LOG_PATH}/hcagent.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<fileNamePattern>${LOG_PATH}/hcagent.log.%i</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>20</maxIndex>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<maxFileSize>15MB</maxFileSize>
		</triggeringPolicy>
		<encoder>
			<pattern>{"version":"1.1.0","timestamp":"%date{yyyy-MM-dd'T'HH:mm:ss.SSSXXX}","service_id":"${SERVICE_ID}","severity":"%toSeverity(%level)","message":%toJson(hcagent[%pid]||%thread||%logger{30}||%L||%method||%msg)}%n</pattern>
		</encoder>
	</appender>

	<root level="INFO">
		<appender-ref ref="LOG_FILE" />
	</root>
	
</configuration>
